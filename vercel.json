{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/backend/server.js"
      },
      {
        "src": "/(.*\\.(css|js))",
        "dest": "/frontend/$1"
      },
      {
        "src": "/admin",
        "dest": "/frontend/admin.html"
      },
      {
        "src": "/booking",
        "dest": "/frontend/booking.html"
      },
      {
        "src": "/",
        "dest": "/frontend/index.html"
      }
    ]
  }