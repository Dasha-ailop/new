{
    "version": 2,
    "builds": [
      {
        "src": "public/**",
        "use": "@vercel/static"
      },
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/",
        "dest": "/public/index.html"
      },
      {
        "src": "/booking",
        "dest": "/public/booking.html"
      },
      {
        "src": "/admin",
        "dest": "/public/admin.html"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ]
  }